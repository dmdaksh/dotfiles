# FONTS
font_size 14.0

# BEGIN_KITTY_FONTS
font_family      family="Hack Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS


# Cursor
cursor_blink     yes

# login shell
shell zsh --login --interactive

# Treat Option as Meta
macos_option_as_alt yes

# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME
